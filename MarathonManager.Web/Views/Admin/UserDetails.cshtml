@model MarathonManager.Web.ViewModels.AdminUserDetailViewModel
@{
    ViewData["Title"] = "Chi tiết Người dùng";
}

<div class="container" style="padding-top: 80px; padding-bottom: 80px;">

    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger">@ViewBag.Error</div>
    }
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">@TempData["SuccessMessage"]</div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
    }

    <a asp-action="Index" asp-route-tab="users" class="btn btn-outline-secondary mb-3">
        <i class="fas fa-arrow-left me-1"></i> Quay lại danh sách
    </a>

    <div class="card shadow-lg">
        <div class="card-header bg-dark text-white">
            <h3 class="mb-0">Chi tiết: @Model.User.FullName</h3>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <h4>Thông tin cơ bản</h4>
                    <ul class="list-group list-group-flush">
                        @* ID đã ẩn *@
                        <li class="list-group-item"><strong>Họ tên:</strong> @Model.User.FullName</li>
                        <li class="list-group-item"><strong>Email:</strong> @Model.User.Email</li>
                        <li class="list-group-item">
                            <strong>Số điện thoại:</strong>
                            @(string.IsNullOrEmpty(Model.User.PhoneNumber) ? "(Chưa cập nhật)" : Model.User.PhoneNumber)
                        </li>

                        <li class="list-group-item">
                            <strong>Ngày sinh:</strong>
                            @(Model.User.DateOfBirth.HasValue? Model.User.DateOfBirth.Value.ToString("dd/MM/yyyy") : "(Chưa cập nhật)")
                        </li>
                        <li class="list-group-item">
                            <strong>Giới tính:</strong>
                            @(string.IsNullOrEmpty(Model.User.Gender) ? "(Chưa cập nhật)" : Model.User.Gender)
                        </li>
                        <li class="list-group-item">
                            <strong>Email:</strong>
                            @if (Model.User.EmailConfirmed)
                            {
                                <span class="badge bg-success">Đã xác thực</span>
                            }
                            else
                            {

                                <span class="badge bg-warning text-dark">Chưa xác thực</span>
                            }
                        </li>
                        <li class="list-group-item"><strong>Ngày tạo:</strong> @Model.User.CreatedAt.ToString("dd/MM/yyyy")</li>
                        <li class="list-group-item">
                            <strong>Trạng thái:</strong>
                            @if (Model.User.IsActive)
                            {
                                <span class="badge bg-success">Active</span>
                            }
                            else
                            {

                                <span class="badge bg-danger">Locked</span>
                            }
                        </li>
                    </ul>
                </div>

                <div class="col-md-6 border-start">
                    <h4>Quản lý Vai trò (Roles)</h4>
                    <p>Chọn các vai trò bạn muốn gán cho người dùng này.</p>

                    <form asp-action="UpdateUserRoles" method="post">
                        <input type="hidden" name="userId" value="@Model.User.Id" />

                        <div class="form-group">
                            @foreach (var role in Model.AllRoles)
                            {
                                // Kiểm tra xem user có role này không
                                bool isChecked = Model.User.Roles.Contains(role.Name);

                                <div class="form-check fs-5 my-2">
                                    <input class="form-check-input"
                                           type="checkbox"
                                           name="selectedRoles"
                                           value="@role.Name"
                                           id="role-@role.Id"
                                           @(isChecked ? "checked" : "")>

                                    <label class="form-check-label" for="role-@role.Id">
                                        @role.Name
                                    </label>
                                </div>
                            }
                        </div>

                        <hr />
                        <button type="submit" class="btn btn-primary w-100">
                            <i class="fas fa-save me-1"></i> Lưu thay đổi Roles
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>