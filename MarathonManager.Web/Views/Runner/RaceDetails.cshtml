@model MarathonManager.API.DTOs.RaceDetailsDto

@{
    ViewData["Title"] = Model.Name;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container" style="padding-top: 80px; padding-bottom: 80px;">

    <!-- Back Button -->
    <div class="mb-3">
        <a asp-controller="Runner" asp-action="Index" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left me-2"></i>Back to Dashboard
        </a>
    </div>

    <!-- Race Header -->
    <div class="row mb-4">
        <div class="col-lg-8">
            <h1 class="display-5 fw-bold">@Model.Name</h1>
            <p class="lead text-muted">@Model.Description</p>
        </div>
        <div class="col-lg-4 text-lg-end">
            <span class="badge @(Model.Status == "Approved" ? "bg-success" : "bg-secondary") fs-6">
                @Model.Status
            </span>
        </div>
    </div>

    <!-- Race Image -->
    @if (!string.IsNullOrEmpty(Model.ImageUrl))
    {
        <div class="row mb-4">
            <div class="col-12">
                <img src="@Model.ImageUrl" class="img-fluid rounded shadow" alt="@Model.Name" style="max-height: 400px; width: 100%; object-fit: cover;">
            </div>
        </div>
    }

    <!-- Race Information Cards -->
    <div class="row mb-4">
        <div class="col-md-4 mb-3">
            <div class="card h-100 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">
                        <i class="fas fa-calendar-alt text-primary me-2"></i>Race Date
                    </h5>
                    <p class="card-text fs-5">
                        <strong>@Model.RaceDate.ToString("dddd, MMMM dd, yyyy")</strong><br>
                        <small class="text-muted">@Model.RaceDate.ToString("hh:mm tt")</small>
                    </p>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-3">
            <div class="card h-100 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">
                        <i class="fas fa-map-marker-alt text-danger me-2"></i>Location
                    </h5>
                    <p class="card-text fs-5">
                        <strong>@Model.Location</strong>
                    </p>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-3">
            <div class="card h-100 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">
                        <i class="fas fa-user-tie text-success me-2"></i>Organizer
                    </h5>
                    <p class="card-text">
                        <strong>@Model.OrganizerName</strong><br>
                        <small class="text-muted">
                            <i class="fas fa-envelope me-1"></i>@Model.OrganizerEmail<br>
                            @if (!string.IsNullOrEmpty(Model.OrganizerPhone))
                            {
                                <i class="fas fa-phone me-1"></i>

                                @Model.OrganizerPhone
                            }
                        </small>
                    </p>
                </div>
            </div>
        </div>
    </div>

    <!-- Race Distances -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-road me-2"></i>Available Distances
                    </h4>
                </div>
                <div class="card-body">
                    @if (!Model.Distances.Any())
                    {
                        <p class="text-muted">No distances available for this race.</p>
                    }
                    else
                    {
                        <div class="row">
                            @foreach (var distance in Model.Distances)
                            {
                                <div class="col-md-6 col-lg-4 mb-3">
                                    <div class="card h-100 @(distance.IsFull ? "border-danger" : "border-success")">
                                        <div class="card-body">
                                            <h5 class="card-title">@distance.Name</h5>
                                            <h3 class="text-primary">@distance.DistanceInKm km</h3>

                                            <div class="mb-3">
                                                <p class="mb-1">
                                                    <strong>Registration Fee:</strong><br>
                                                    <span class="fs-4 text-success">@distance.RegistrationFee.ToString("N0") VNĐ</span>
                                                </p>
                                                <p class="mb-1">
                                                    <strong>Start Time:</strong><br>
                                                    @distance.StartTime.ToString("hh:mm tt")
                                                </p>
                                            </div>

                                            <!-- Capacity Bar -->
                                            <div class="mb-3">
                                                <div class="d-flex justify-content-between mb-1">
                                                    <small><strong>Capacity:</strong></small>
                                                    <small>@distance.CurrentParticipants / @distance.MaxParticipants</small>
                                                </div>
                                                <div class="progress" style="height: 20px;">
                                                    <div class="progress-bar @(distance.IsFull ? "bg-danger" : "bg-success")"
                                                         role="progressbar"
                                                         style="width: @distance.PercentageFilled%"
                                                         aria-valuenow="@distance.CurrentParticipants"
                                                         aria-valuemin="0"
                                                         aria-valuemax="@distance.MaxParticipants">
                                                        @distance.PercentageFilled.ToString("F0")%
                                                    </div>
                                                </div>
                                            </div>

                                            <!-- Register Button -->
                                            @if (distance.IsFull)
                                            {
                                                <button class="btn btn-secondary w-100" disabled>
                                                    <i class="fas fa-ban me-2"></i>Full
                                                </button>
                                            }
                                            else
                                            {
                                                <form asp-controller="Runner" asp-action="Register" method="post">
                                                    @Html.AntiForgeryToken()
                                                    <input type="hidden" name="raceId" value="@Model.Id" />
                                                    <input type="hidden" name="raceDistanceId" value="@distance.Id" />
                                                    <button type="submit" class="btn btn-success w-100" onclick="return confirm('Confirm registration for @distance.Name?');">
                                                        <i class="fas fa-user-plus me-2"></i>Register Now
                                                    </button>
                                                </form>
                                            }
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Related Blog Posts -->
    @if (Model.BlogPosts.Any())
    {
        <div class="row mb-4">
            <div class="col-12">
                <div class="card shadow-sm">
                    <div class="card-header bg-info text-white">
                        <h4 class="mb-0">
                            <i class="fas fa-newspaper me-2"></i>Related Articles
                        </h4>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            @foreach (var blog in Model.BlogPosts)
                            {
                                <div class="col-md-6 col-lg-4 mb-3">
                                    <div class="card h-100">
                                        @if (!string.IsNullOrEmpty(blog.FeaturedImageUrl))
                                        {
                                            <img src="@blog.FeaturedImageUrl" class="card-img-top" alt="@blog.Title" style="height: 150px; object-fit: cover;">
                                        }
                                        <div class="card-body">
                                            <h6 class="card-title">@blog.Title</h6>
                                            <p class="card-text">
                                                <small class="text-muted">
                                                    By @blog.AuthorName<br>
                                                    @blog.CreatedAt.ToString("MMM dd, yyyy")
                                                </small>
                                            </p>
                                            <a href="#" class="btn btn-sm btn-outline-primary">Read More</a>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

</div>