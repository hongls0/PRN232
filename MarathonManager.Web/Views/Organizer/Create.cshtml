@model MarathonManager.Web.DTOs.RaceCreateDto
@{
    ViewData["Title"] = "Tạo giải chạy mới";
}

<div class="container" style="padding-top: 80px; padding-bottom: 80px;">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10">
            <div class="card shadow-lg border-0 rounded-lg">
                <div class="card-header bg-success text-white text-center">
                    <h3 class="fw-bold my-4">Thông tin Giải chạy mới</h3>
                </div>
                <div class="card-body p-4 p-sm-5">

                    <form asp-action="Create" method="post" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <!-- Tên giải chạy -->
                        <div class="form-floating mb-3">
                            <input asp-for="Name" class="form-control" placeholder="Tên giải chạy" />
                            <label asp-for="Name"></label>
                            <span asp-validation-for="Name" class="text-danger small"></span>
                        </div>

                        <!-- Địa điểm -->
                        <div class="form-floating mb-3">
                            <input asp-for="Location" class="form-control" placeholder="Địa điểm" />
                            <label asp-for="Location"></label>
                            <span asp-validation-for="Location" class="text-danger small"></span>
                        </div>

                        <!-- Ngày diễn ra -->
                        <div class="mb-3">
                            <label asp-for="RaceDate" class="form-label"></label>
                            <input asp-for="RaceDate" type="datetime-local" class="form-control" />
                            <span asp-validation-for="RaceDate" class="text-danger small"></span>
                        </div>

                        <!-- Ảnh bìa -->
                        <div class="mb-3">
                            <label for="imageFile" class="form-label">Ảnh bìa (Tùy chọn)</label>
                            <input type="file" name="imageFile" id="imageFile" class="form-control" accept="image/png, image/jpeg, image/gif" />
                            <span class="text-danger small" data-valmsg-for="imageFile"></span>
                        </div>

                        <!-- Mô tả -->
                        <div class="form-floating mb-3">
                            <textarea asp-for="Description" class="form-control" placeholder="Mô tả chi tiết" style="height: 150px;"></textarea>
                            <label asp-for="Description"></label>
                            <span asp-validation-for="Description" class="text-danger small"></span>
                        </div>

                        <!-- Khoảng cách chạy -->
                        <div class="form-floating mb-3">
                            <input asp-for="DistancesInput" class="form-control" placeholder="Ví dụ: 5, 10, 21, 42" />
                            <label asp-for="DistancesInput">Khoảng cách chạy (nhập nhiều cách nhau bằng dấu phẩy)</label>
                            <span asp-validation-for="DistancesInput" class="text-danger small"></span>
                        </div>

                        <!-- Nút gửi -->
                        <div class="d-grid mt-4">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="fas fa-save me-1"></i> Gửi duyệt
                            </button>
                        </div>
                    </form>
                </div>

                <div class="card-footer text-center py-3">
                    <div class="small">
                        <a asp-action="Index">Quay lại Dashboard</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
